{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "importsNotUsedAsValues": "remove"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
